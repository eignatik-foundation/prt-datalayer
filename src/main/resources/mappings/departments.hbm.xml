<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="space.eignatik.prt.datalayer.dataTools.entities.Departments" table="departments">

        <meta attribute = "class-description">
            Representation of users in departments in the company
        </meta>

        <id name="id" type="integer" column="id">
            <generator class="native"/>
        </id>

        <property name="deptId" column="dept_id" type="integer"/>
        <property name="userId" column="user_id" type="integer"/>

    </class>
</hibernate-mapping>