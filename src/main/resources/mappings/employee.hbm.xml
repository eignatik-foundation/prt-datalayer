<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="space.eignatik.prt.datalayer.modelEntities.Employee" table="employee">

        <meta attribute = "class-description">
            Representation of employee in the company
        </meta>

        <id name="id" type="integer" column="id">
            <generator class="native"/>
        </id>

        <property name="fname" column="fname" type="java.lang.String"/>
        <property name="lname" column="lname" type="java.lang.String"/>

    </class>
</hibernate-mapping>