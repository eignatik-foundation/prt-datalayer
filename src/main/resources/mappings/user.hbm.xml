<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="space.eignatik.prt.datalayer.dataTools.entities.User" table="emp_user">

        <meta attribute = "class-description">
            Representation of user in system that related with employee in the company
        </meta>

        <id name="id" type="integer" column="id">
            <generator class="native"/>
        </id>

        <property name="employeeId" column="employee_id" type="integer"/>
        <property name="login" column="login" type="java.lang.String"/>
        <property name="password" column="password" type="java.lang.String"/>

    </class>
</hibernate-mapping>