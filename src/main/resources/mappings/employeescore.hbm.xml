<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="space.eignatik.prt.datalayer.modelEntities.EmployeeScore" table="employee_score">

        <meta attribute = "class-description">
            Representation of department in the company
        </meta>

        <id name="id" type="integer" column="id">
            <generator class="native"/>
        </id>

        <property name="userId" column="user_id" type="integer"/>
        <property name="date" column="ev_date" type="java.lang.String"/>
        <property name="score" column="score" type="float"/>

    </class>
</hibernate-mapping>